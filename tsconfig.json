{
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "build",
		"strict": true,
		"strictNullChecks": false,
		"noImplicitAny": true,
		"declaration": true,
		"module": "commonjs",
		"target": "ES2019",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"types": ["node", "jest"]
	},
	"include": ["src/**/*", "test/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
