{
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "build",
		"strict": true,
		"noImplicitAny": true,
		"declaration": true,
		"module": "commonjs",
		"target": "es2019",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"types": ["node", "jest"],
		"paths": {
			"@core": ["src/core"],
			"@directives": ["src/directives"],
			"@operators": ["src/operators"]
		}
	},
	"include": ["src/**/*", "test/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
